<!DOCTYPE html>
<html>
<head>
  <title>Ritopls</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script>
 
  var onload = function() {
    var cookie = document.cookie.slice(3)
    var username = $('#username').val();
    var usernamebox = document.getElementById('username')
    var passwordbox = document.getElementById('password')
    var logged_in = function(data){
      logged.innerHTML = "Logged in as: " + data.name.username;
      $('#username').val = data.name.username
    }
    $.ajax({
        url: "/users",
        data: cookie,
        method: 'post',
        success: function(data) {
          logged_in(data);
        }
      });
    $('#login').click(function(event) {
      event.preventDefault();
      var logged = document.getElementById('logged')
      var username = $('#username').val();
      var password = $('#password').val();
      var object = {
        username: username,
        password: password
      };
      var json = JSON.stringify(object);

      $.ajax({
        url: "/login.json",
        data: json,
        method: 'post',
        dataType: 'json',
        success: function(data) {
          if (data["status"] == "SUCCESS") {
            logged_in(data);
            document.cookie = 'id = ' + data.name._id.$oid;
          } else {
            logged.innerHTML = "Invalid username or password.";
          }
         }
       });
     });
    $('#signup').click(function(event) {
      event.preventDefault();
      var newusername = $('#newusername').val();
      var newemail = $('#newemail').val();
      var newpassword = $('#newpassword').val();
      var newpassword2 = $('#newpassword2').val();
      var nousername = true;
      var noemail = true;

      $.ajax({
        url: "findusername",
        data: newusername,
        method: 'post',
        success: function(data) {
          alert("username already exists")
        },
        error: function(){
          checkemail();
        }
      });

      var checkemail = function() {
        $.ajax({
          url: "findemail",
          data: newemail,
          method: 'post',
          success: function(data) {
            alert("email already exists")
            noemail = false
          },
          error: function(){
          signup();
        }
        });
       }

      var signup = function() {
        if(nousername && noemail && newpassword == newpassword2) {
          var object = {
            username: newusername,
            email: newemail,
            passwordarr: [newpassword, newpassword2]
          };
          var json = JSON.stringify(object);

          $.ajax({
            url: "/signup.json",
            data: json,
            method: 'post',
            dataType: 'json',
            success: function(data) {
              logged_in(data);
              document.cookie = 'id = ' + data.name._id.$oid;
             }
           });
        } else {
          alert("passwords do not match")
        }
      }
     });
        $('#logout').click(function() {
      console.log("dsf")
      document.cookie = 'id = ;expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    })
  }

    $(document).ready =(onload)
    $(window).bind('page:change', onload)   

  </script>
